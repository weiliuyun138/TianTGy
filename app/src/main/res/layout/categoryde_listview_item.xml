<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/no_pic_2"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:id="@+id/category_detail_lv_thumphoto" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/category_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="墨西哥牛油果"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category_detail_lv_volume"
                android:layout_below="@id/category_detail_name"
                android:layout_marginLeft="5dp"
                android:text="6个装" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category_detail_lv_price"
                android:text="￥258"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="5dp"
                android:textSize="22sp"
                android:textColor="@color/chocolate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category_detail_lv_oldprice"
                android:text="￥288"
                android:textSize="20sp"
                android:textColor="@color/grey"
                android:layout_toRightOf="@+id/category_detail_lv_price"
                android:layout_alignBottom="@+id/category_detail_lv_price"
                android:layout_marginLeft="10dp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:id="@+id/category_detail_lv_addcar"
            android:button="@null"
            android:layout_margin="5dp"
            android:focusable="false"
            android:background="@drawable/addtocart" />
    </LinearLayout>

</LinearLayout>