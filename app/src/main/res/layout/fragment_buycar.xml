<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.tiantgy.fragment.BuycarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/limegreen"
        android:layout_weight="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="购物车"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/buycar_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/bar_delete" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:layout_weight="0.7"
        android:text="已选商品"
        android:background="@color/darkgrey"
        android:gravity="center_vertical" />

    <ListView
        android:id="@+id/buycar_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"></ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/oldlace"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buycar_heji"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:text="合计:"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/buycar_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/buycar_heji"
            android:textColor="@color/darkgoldenrod"
            android:gravity="center"
            android:text="¥" />

        <TextView
            android:id="@+id/buycar_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/buycar_money"
            android:textSize="22sp"
            android:textColor="@color/darkgoldenrod"
            android:gravity="center"
            android:text="728" />

        <Button
            android:id="@+id/buycar_buynow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="立即购买"
            android:textColor="@color/white"
            android:background="@color/darkgoldenrod"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</LinearLayout>
