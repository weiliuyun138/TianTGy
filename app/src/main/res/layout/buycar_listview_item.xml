<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="170dp">

    <ImageView
        android:id="@+id/buycar_listview_photo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/no_pic_2"
        android:layout_margin="5dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.4">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buycar_listview_name"
            android:text="超大美国西北樱桃"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buycar_listview_volume"
            android:layout_marginLeft="5dp"
            android:text="5斤装"
            android:layout_below="@+id/buycar_listview_name"/>

        <TextView
            android:id="@+id/buycar_listview_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:text="¥"
            android:textColor="@color/darkgoldenrod"/>
        <TextView
            android:id="@+id/buycar_listview_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/buycar_listview_money"
            android:text="138"
            android:textSize="26sp"
            android:textColor="@color/darkgoldenrod"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@drawable/buycar_numbutton_selector">
            <ImageView
                android:id="@+id/buycar_listview_Minus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:focusable="false"
                android:layout_marginTop="5dp"
                android:src="@drawable/icon_map_zoom_selector_in_default"
                />
            <TextView
                android:id="@+id/buycar_listview_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/buycar_listview_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0000"
                android:focusable="false"
                android:layout_marginBottom="5dp"
                android:src="@drawable/icon_map_zoom_selector_out_default"
                />

            </LinearLayout>


    </RelativeLayout>

</LinearLayout>